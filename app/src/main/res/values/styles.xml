<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--<item name=”colorPrimary”>@color/my_awesome_color</item>-->
        <item name="colorPrimary">@color/blue_1</item>
        <item name="colorPrimaryDark">@color/blue_2</item>
        <item name="colorAccent">@color/blue_4</item>
        <item name="colorControlHighlight">@android:color/white</item>
        <item name="searchViewStyle">@style/searchStyle</item>
    </style>

    <style name="searchStyle" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@null</item>
        <item name="searchHintIcon">@null</item>
    </style>

    <style name="textStyleGeneral" parent="@android:style/TextAppearance">
        <item name="android:padding">10dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black_1</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="editTextStyle" parent="@android:style/TextAppearance">
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="editTextStyle.Title">
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="compatDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/blue_2</item>
    </style>

</resources>
