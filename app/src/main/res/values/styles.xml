<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--<item name=”colorPrimary”>@color/my_awesome_color</item>-->
        <item name="colorPrimary">@color/blue_1</item>
        <item name="colorPrimaryDark">@color/blue_2</item>
        <item name="colorAccent">@color/blue_4</item>
        <item name="colorControlHighlight">@android:color/white</item>
        <item name="searchViewStyle">@style/searchStyle</item>
        <item name="android:dropDownListViewStyle">@style/searchDropStyle</item>
        <item name="android:dropDownItemStyle">@style/searchDropTextStyle</item>
    </style>

    <style name="searchStyle" parent="Widget.AppCompat.Light.SearchView">
        <item name="searchIcon">@null</item>
        <item name="searchHintIcon">@null</item>
        <item name="suggestionRowLayout">@layout/abc_search_dropdown_item_icons_2line</item>
    </style>

    <style name="searchDropStyle" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:background">@color/white</item>>
    </style>

    <style name="searchDropTextStyle" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:textColor">@color/black_1</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAppearance">?android:attr/textAppearanceListItemSmall</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textStyleGeneral" parent="@android:style/TextAppearance">
        <item name="android:padding">10dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black_1</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="textStyleGeneral.bold" parent="@android:style/TextAppearance">
        <item name="android:padding">10dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lines">1</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="textStyleGeneral.adTitle">
        <item name="android:padding">2dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="textStyleGeneral.adSummary">
        <item name="android:padding">2dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="textStyleGeneral.sponsorLabel">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="editTextStyle" parent="@android:style/TextAppearance">
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="editTextStyle.Title">
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="compatDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/blue_2</item>
        <item name="android:textColorPrimary">@color/black_1</item>
        <item name="android:background">@color/white</item>
    </style>

</resources>
