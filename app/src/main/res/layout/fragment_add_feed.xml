<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

    <EditText
        android:id="@+id/captionEditText"
        style="@style/editTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="@string/hint_caption"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="300dp"
        android:layout_alignStart="@+id/captionEditText"
        android:layout_alignLeft="@+id/captionEditText"
        android:layout_alignEnd="@+id/captionEditText"
        android:layout_alignRight="@+id/captionEditText"
        android:layout_below="@+id/captionEditText"
        android:layout_marginTop="10dp"
        android:id="@+id/gifImageView"
        android:background="@color/light_gray"/>

</RelativeLayout>
