<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <EditText
        android:id="@+id/captionEditText"
        style="@style/editTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="@string/hint_caption" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/gifImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/captionEditText"
        android:layout_alignLeft="@+id/captionEditText"
        android:layout_alignRight="@+id/captionEditText"
        android:layout_alignStart="@+id/captionEditText"
        android:layout_below="@+id/captionEditText"
        android:layout_marginTop="10dp"
        android:background="@color/light_gray"
        android:minHeight="300dp"
        fresco:actualImageScaleType="centerCrop"
        fresco:fadeDuration="200"
        fresco:failureImage="@drawable/ic_busy" />
