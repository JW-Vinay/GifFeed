<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingBottom="30dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/transImageView"
        android:layout_alignEnd="@+id/transImageView"
        android:layout_alignLeft="@+id/transImageView"
        android:layout_alignRight="@+id/transImageView"
        android:layout_alignStart="@+id/transImageView"
        android:layout_alignTop="@+id/transImageView"
        android:src="@drawable/ic_home"
        android:adjustViewBounds="true"
        android:background="@drawable/plc_image"/>

    <ImageView
        android:id="@+id/transImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:minHeight="300dp"
        android:minWidth="300dp"
        android:src="@drawable/transparent_layer" />

    <TextView
        android:id="@+id/captionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:ellipsize="end"
        android:gravity="start|center_vertical"
        android:maxLines="2"
        android:padding="5dp"
        android:text="Dummy text"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@color/white"
        android:textStyle="bold" />
</RelativeLayout>