<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/storyListIcon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:background="@android:color/black" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/storyListIcon"
        android:layout_alignEnd="@+id/storyListIcon"
        android:layout_alignLeft="@+id/storyListIcon"
        android:layout_alignRight="@+id/storyListIcon"
        android:layout_alignStart="@+id/storyListIcon"
        android:layout_alignTop="@+id/storyListIcon"
        android:adjustViewBounds="true"
        android:src="@drawable/transparent_layer"/>

    <TextView
        android:id="@+id/storyListText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/storyListIcon"
        android:layout_alignLeft="@+id/storyListIcon"
        android:layout_alignStart="@+id/storyListIcon"
        android:gravity="start|center_vertical"
        android:padding="5dp"
        android:text="Dummy text"
        android:maxLines="2"
        android:ellipsize="end"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@color/white"
        android:textStyle="bold" />

</RelativeLayout>