    <ImageView
        android:id="@+id/gifImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/plc_image" />

    <ImageView
        android:id="@+id/transImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/gifImageView"
        android:layout_alignEnd="@+id/gifImageView"
        android:layout_alignLeft="@+id/gifImageView"
        android:layout_alignRight="@+id/gifImageView"
        android:layout_alignStart="@+id/gifImageView"
        android:layout_alignTop="@+id/gifImageView"
        android:adjustViewBounds="true"
        android:src="@drawable/transparent_layer" />

    <TextView
        android:id="@+id/captionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/gifImageView"
        android:layout_alignLeft="@+id/gifImageView"
        android:layout_alignStart="@+id/gifImageView"
        android:ellipsize="end"
        android:gravity="start|center_vertical"
        android:maxLines="2"
        android:padding="5dp"
        android:text="Dummy text"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@color/white"
        android:textStyle="bold" />
</RelativeLayout>